<?xml version="1.0" encoding="UTF-8" ?>
<dialog resizable="false" iconimage="dva_icon.png" title="Progress">
    <panel constraints="BorderLayout.CENTER" layout="BorderLayout" border="EmptyBorder(10,10,10,10)">
        <label id="descriptionLabel" constraints="BorderLayout.NORTH" text="Progress description ..."/>
        <panel constraints="BorderLayout.CENTER" layout="BorderLayout" border="EmptyBorder(10,0,10,0)" >
            <hbox>
                <progressbar id="progressBar" constraints="BorderLayout.CENTER" preferredsize="300,20" />
                <panel id="cancelButtonPanel" border="EmptyBorder(0,10,0,0)">
                    <button id="cancelButton" action="cancelActionInternal" visible="true"/>
                </panel>
            </hbox>
        </panel>
        <label id="progressLabel" constraints="BorderLayout.SOUTH"/>
    </panel>
</dialog>