<?xml version="1.0" encoding="UTF-8" ?>
<dialog layout="BorderLayout" title="Download Timetable" modal="true">
    <label text="NOTE: This feature currently does not work as Sydney Trains has stopped publishing HTML-based timetables online and now only provides PDF-based ones." constraints="BorderLayout.NORTH" />
    <vbox border="EmptyBorder(5,5,5,5)">
        <panel layout="GridLayout(2,1,5,2)">
            <label text="Enter name:"/>
            <textfield id="timetableName"/>
        </panel>
        <hbox border="EmptyBorder(6,2,2,2)">
            <label text="Timetable:"/>
            <vbox>
                <buttongroup>
                    <radiobutton id="weekday" text="Weekday"/>
                    <radiobutton id="weekend" text="Weekend"/>
                </buttongroup>
            </vbox>
        </hbox>
        <panel layout="FlowLayout(FlowLayout.TRAILING">
            <button action="okAction"/>
            <button action="cancelAction"/>
        </panel>
    </vbox>
</dialog>
