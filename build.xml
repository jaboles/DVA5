    <property name="DmgName" value="DVA5"/>
    <property name="DmgVolumeName" value="DVA 5"/>
    <property name="DmgMountPoint" value="/Volumes/${DmgVolumeName}"/>
    <property name="DmgSizeMb" value="185"/>
	
