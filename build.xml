            <arg value="NSHumanReadableCopyright"/>
            <arg value="-string"/>
            <arg value="Copyright Â© Jonathan Boles 1999-2017"/>
            <arg value="DVA.app/Contents/Info.plist"/>
        </exec>
    </target>

