<?xml version="1.0" encoding="UTF-8" ?>
<panel name="Indicators" layout="BorderLayout" border="EmptyBorder(4,8,8,8)" opaque="false">
    <hbox constraints="BorderLayout.NORTH">
        <panel border="TitledBorder(Indicator Style)" opaque="false">
            <vbox id="rendererComboboxesPanel"/>
        </panel>
        <vbox border="TitledBorder(Announcement Style)">
            <jbcombobox id="playAnnouncementVoiceCombobox" />
            <panel layout="BorderLayout" opaque="false">
                <panel constraints="BorderLayout.WEST" layout="FlowLayout(FlowLayout.LEADING)" opaque="false">
                    <checkbox id="playAnnouncementCheckbox" text="Announce" />
                    <textfield id="playAnnouncementTimes" />
                    <label text="mins before departure:"/>
                </panel>
            </panel>
            <panel constraints="BorderLayout.WEST" layout="FlowLayout(FlowLayout.LEADING)" opaque="false">
                <checkbox id="coalesceStationSequencesCheckbox" text="Enable &quot;all stations to&quot; phrasing" selected="true"/>
            </panel>
        </vbox>
        <panel id="startButtonsPanel" border="TitledBorder(Show)" opaque="false">
            <vbox>
                <panel layout="GridLayout(2,1,0,5)" opaque="false">
                    <button id="windowButton" action="windowAction" text="Window" />
                    <button id="fullScreenButton" action="fullScreenAction" text="Full Screen" />
                </panel>
            </vbox>
        </panel>
        <panel id="previewButtonPanel" border="TitledBorder(Preview)" layout="FlowLayout(FlowLayout.LEADING)" opaque="false">
            <button id="previewButton" action="previewAction"/>
        </panel>
    </hbox>
    <tabbedpane id="tabbedPane" constraints="BorderLayout.CENTER" border="TitledBorder(Data Source)">
        <panel name="Manual" layout="FlowLayout" opaque="false">
            <hbox>
                <vbox id="departuresList" />
                <label text=" "/>
                <vbox>
                    <panel layout="BorderLayout" opaque="false">
                        <button constraints="BorderLayout.NORTH" id="playStopButton" action="announceAction"/>
                        <label constraints="BorderLayout.CENTER" text="                   "/>
                    </panel>
                    <panel layout="BorderLayout" opaque="false">
                        <button constraints="BorderLayout.WEST" text="" id="promoteDeparturesButton" action="promoteDepartures"/>
                    </panel>
                </vbox>
            </hbox>
        </panel>
        <panel name="Timetable" layout="FlowLayout" opaque="false">
            <vbox>
                <panel layout="GridLayout(3,1,0,3)" opaque="false">
                    <label id="gtfsInfo"/>
                    <hbox>
                        <label id="gtfsDownloadTimestamp"/>
                        <label text=" "/>
                        <button text="Clear" action="clearDownloadedGtfsAction"/>
                    </hbox>
                    <label id="gtfsExpiryTime"/>
                </panel>
                <label text=" "/>
                <label text=" "/>
                <panel constraints="BorderLayout.NORTH" layout="GridLayout(6,1,0,6)" border="EmptyBorder(0,0,0,2)" opaque="false">
                    <label text="Select station:"/>
                    <jbcombobox id="gtfsStation" size="400,10"/>
                    <checkbox id="filterPlatform" action="filterPlatformAction" text="Filter by platform:"/>
                    <jbcombobox id="gtfsPlatform" size="400,10" />
                    <checkbox id="filterRoute" action="filterRouteAction" text="Filter by route:"/>
                    <jbcombobox id="gtfsRoute" size="400,10" />
                </panel>
                <label text=" "/>
                <label text=" "/>
                <panel layout="FlowLayout(FlowLayout.CENTER)" opaque="false">
                    <label text="&lt;html&gt;Use Window/Full Screen buttons at top of window to start&lt;br&gt;indicator, or use button below to load the Manual page.&lt;/html&gt;"/>
                </panel>
                <panel layout="FlowLayout(FlowLayout.CENTER)" opaque="false">
                    <button action="loadManualFromTimetable"/>
                </panel>
            </vbox>
        </panel>
    </tabbedpane>
</panel>